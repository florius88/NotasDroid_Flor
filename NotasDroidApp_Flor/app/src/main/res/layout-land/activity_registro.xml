<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroActivity">

    <TextView
            android:text="@string/registro_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroRegistro"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/editTextRegistroNombre"
            app:layout_constraintVertical_bias="0.838"/>
    <TextView
            android:text="@string/registro_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroNombre"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="20dp" app:layout_constraintBottom_toTopOf="@+id/textVieRegistroEmail"
            app:layout_constraintEnd_toStartOf="@+id/editTextRegistroNombre"
            android:layout_marginEnd="8dp" android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextRegistroNombre"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintBottom_toTopOf="@+id/editTextRegistroEmail"
            app:layout_constraintStart_toEndOf="@+id/textViewRegistroNombre" android:layout_marginStart="8dp"
    />
    <TextView
            android:text="@string/registro_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textVieRegistroEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewRegistroFoto" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextRegistroEmail" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextRegistroEmail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toEndOf="@+id/textVieRegistroEmail"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegistroHacerFoto"/>
    <TextView
            android:text="@string/registro_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroFoto"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="20dp" android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textViewRegistroCiclo" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonRegistroHacerFoto" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/registro_hacerFoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonRegistroHacerFoto"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/spinnerRegistroCiclo"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textViewRegistroFoto"
            app:layout_constraintEnd_toStartOf="@+id/buttonRegistroSeleccionarFoto" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/registro_seleccionarFoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonRegistroSeleccionarFoto"
            android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/spinnerRegistroCurso"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/buttonRegistroHacerFoto"/>
    <TextView
            android:text="@string/registro_ciclo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroCiclo"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewRegistroContrasenia" android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
    />
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/spinnerRegistroCiclo"
            app:layout_constraintEnd_toStartOf="@+id/textViewRegistroCurso"
            app:layout_constraintStart_toEndOf="@+id/textViewRegistroCiclo" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintBottom_toTopOf="@+id/editTextRegistroContrasenia"/>
    <TextView
            android:text="@string/registro_curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroCurso"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/spinnerRegistroCurso"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/spinnerRegistroCiclo"
            app:layout_constraintBottom_toTopOf="@+id/textViewRegistroConfirmarContrasenia"
            android:layout_marginBottom="10dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/spinnerRegistroCurso"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textViewRegistroCurso"
            app:layout_constraintBottom_toTopOf="@+id/editTextRegistroConfirmarContrasenia"/>
    <TextView
            android:text="@string/registro_contrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroContrasenia"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegistroRegistrarse" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextRegistroContrasenia" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextRegistroContrasenia"
            app:layout_constraintStart_toEndOf="@+id/textViewRegistroContrasenia"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewRegistroConfirmarContrasenia"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegistroRegistrarse"/>
    <TextView
            android:text="@string/registro_confirmarContrasenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewRegistroConfirmarContrasenia"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegistroRegistrarse" android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextRegistroConfirmarContrasenia"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/editTextRegistroContrasenia"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextRegistroConfirmarContrasenia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegistroRegistrarse"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewRegistroConfirmarContrasenia"/>
    <Button
            android:text="@string/registro_registrarse"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonRegistroRegistrarse"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:layout_marginBottom="5dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>