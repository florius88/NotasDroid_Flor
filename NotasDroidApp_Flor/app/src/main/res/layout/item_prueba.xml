<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/itemAsignaturaLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightLarge" android:backgroundTint="@color/colorAccent">

    <ImageView
            android:id="@+id/itemPruebaImageView"
            android:layout_width="86dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="Icono" app:srcCompat="@drawable/ic_flor_prueba"/>

    <TextView
            android:id="@+id/itemPrueba"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/itemPruebaImageView"
            android:layout_toRightOf="@id/itemPruebaImageView"
            android:gravity="center_vertical"
            android:lines="2"
            android:textSize="18sp"
            android:textStyle="bold" android:text="Prueba" android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" android:textColor="@color/secondary_text"/>

    <TextView
            android:id="@+id/itemPruebaTextFecha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="10sp"
            android:textSize="18sp" android:text="fecha_Prueba" android:textColor="@color/secondary_text"/>

    <TextView
            android:id="@+id/itemPruebaTextHora"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10sp"
            android:textSize="14sp" android:textColor="@color/secondary_text" android:text="hora_Prueba"/>

</RelativeLayout>