<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.mi_matricula.PruebaDetalleFragment">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/divider"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/noticiaDetalleTextTitular"
                android:layout_width="400dp"
                android:layout_height="52dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:lines="3"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" android:text="Prueba"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>