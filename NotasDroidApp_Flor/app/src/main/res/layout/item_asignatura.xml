<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/itemAsignaturaLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightLarge" android:backgroundTint="@color/colorAccent">

    <ImageView
            android:id="@+id/itemPruebaImageView"
            android:layout_width="69dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="Icono" app:srcCompat="@drawable/ic_flor_asignatura"/>

    <TextView
            android:id="@+id/itemPrueba"
            android:layout_width="479dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/itemPruebaImageView"
            android:layout_toRightOf="@id/itemPruebaImageView"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:textStyle="bold" android:text="Asignatura" android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"/>

</RelativeLayout>